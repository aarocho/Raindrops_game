textSize(50);
  fill(10);
  text(score, 10, 100);
  for (int i = 0; i < index; i++) {
    r[i].display();
    r[i].drop();
    if (catcher.catchDrop(r[i]) == true) {
      r[i].goAway();
      score++;
      threshold-=50;
    }
  }
  catcher.display();
  catcher.update();
  if (millis() - oldTime > threshold) {
    if (index < r.length) {
      index++;
      oldTime = millis();
    }
  }
  //if(index > r.length) {
    
}
